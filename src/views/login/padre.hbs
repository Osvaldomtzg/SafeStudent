<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body class="loginBody">
    <section class="container">
        <section class="login">
            <div class="header">
                <button class="selectionUser padre">Padre o tutor</button>
                <a href="/login/instituto"><button class="selectionUser option">Institución</button></a>
            </div>
            <div class="logo">
                <img src="/images/SafeStudentScude.png">
            </div>
            <form action="/login" method="POST" class="w-75">
                {{#if message}}
                <div class="row mt-2 mb-2">
                    <div class="col-md-4 mx-auto">
                        <div class="alert alert-danger alert-dismissible fade show pb-2 pt-2 mb-0" role="alert">
                            {{message}}
                            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">

                            </button>
                        </div>
                    </div>
                </div>
                {{/if}}
                <div class="form-group">
                    <input type="text" name="matricula" placeholder="Matricula" class="form-control">
                </div>
                <div class="form-group mt-2">
                    <input type="password" name="password" placeholder="Contraseña" class="form-control">
                </div>
                <div class="form-group mt-2">
                    <button class="btn btn-light">
                        Ingresar
                    </button>
                </div>
            </form>
        </section>
    </section>
</body>