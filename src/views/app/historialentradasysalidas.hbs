<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">

    <link rel="shortcut icon" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/style.css">
    <title>Entradas y Salidas | SafeStudent</title>
</head>

<body>
    <div class="container historiales">
        <div class="historialPage">
            <div class="logo logoHomeStudent logoHistorial">
                <img src="/images/SafeStudentScude.webp">
            </div>
            <div class="tituloHistorial">
                <h4>Historial de entradas y salidas</h4>
            </div>
            
            <div class="buscador">
                <form action="/student/historial/entradasysalidas" method="POST">
                <div class='col-sm-6'>
                    <div class="form-group">
                        <div class='input-group date' id='datetimepicker'>
                            <input type='text' class="form-control" name="fecha" placeholder="DD/MM/YYYY" />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        // Bootstrap DateTimePicker v4
                        $('#datetimepicker').datetimepicker({
                            format: 'YYYY-MM-DD'
                        });
                    });      
                </script>
                
                <input type="submit" value="Buscar" class="actionButton">
                </form>
            </div>
            {{#if message}}
            <div>
                <br>
                <font color="red"><center>‚ùå Error, no ha seleccionado una fecha valida</center></font>
            </div>
            {{/if}}
            <div class="historialDetails">
                <table class="table table-hover" id="historial">
                    <thead>
                        <tr>
                            <th>Entrada</th>
                            <th>Salida</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <tr>
                            {{#each resultado}}
                            {{#if hora_entrada }}
                            <td>{{hora_entrada}}</td>
                            {{else}}
                            <td>No registrado</td>
                            {{/if}}
                            
                            <td>{{hora_salida}}</td>
                            <td>{{fecha}}</td>
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="historialPage backButton">
            <a href="/student"><input type="button" value="Regresar" class="actionButton"></a>
        </div>
    </div>
</body>